<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FinalProject.AreaAddWindow"
        Icon="icons/search.png"
        Title="Добавить область">
    <Grid>
        <StackPanel>
            
            <StackPanel Margin="0 0 0 10" HorizontalAlignment="Center">
                <TextBlock HorizontalAlignment="Center">Добавление</TextBlock>
            </StackPanel>
            
            <StackPanel Margin="0 0 0 10" HorizontalAlignment="Center" Orientation="Vertical">
                <TextBox HorizontalAlignment="Center" Name="AreaNameTextBox"></TextBox>
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center">
                <Button Margin="0 0 0 10" HorizontalAlignment="Center" Click="AddArea">Добавить</Button>
                <Button HorizontalAlignment="Center" Click="Cancel">Отменить</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>