<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FinalProject.CheckingEditWindow"
        Icon="icons/search.png"
        Title="Редактирование проверки">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Margin="0 0 0 10" HorizontalAlignment="Center" >
                <TextBlock HorizontalAlignment="Center" >Редактирование</TextBlock>
            </StackPanel>
            
            <StackPanel Margin="0 0 0 10" HorizontalAlignment="Center" Orientation="Vertical">
                <TextBlock Width="150" Margin="0 0 0 10" HorizontalAlignment="Center">ID Проверки</TextBlock>
                <TextBox Width="150" Margin="0 0 0 10" HorizontalAlignment="Center" Name="idTextBox"></TextBox>
                <TextBlock Width="150" Margin="0 0 0 10" HorizontalAlignment="Center">Сотрудник</TextBlock>
                <ComboBox Width="150" Margin="0 0 0 10" HorizontalAlignment="Center" Name="EmployeeComboBox"></ComboBox>
                <TextBlock Width="150" Margin="0 0 0 10" HorizontalAlignment="Center">Среда</TextBlock>
                <ComboBox Width="150" Margin="0 0 0 10" HorizontalAlignment="Center" Name="DepartmentComboBox"></ComboBox>
                <TextBlock Width="150" Margin="0 0 0 10" HorizontalAlignment="Center">Область</TextBlock>
                <ComboBox Width="150" Margin="0 0 0 10" HorizontalAlignment="Center" Name="AreaComboBox"></ComboBox>
                <TextBlock Width="150" Margin="0 0 0 10" HorizontalAlignment="Center">Дата проверки</TextBlock>
                <DatePicker Margin="0 0 0 10" HorizontalAlignment="Center"  Name="DateTextBox"></DatePicker>
                <TextBlock Width="150" Margin="0 0 0 10" HorizontalAlignment="Center">Результат</TextBlock>
                <ComboBox Width="150" HorizontalAlignment="Center"  Name="ResultComboBox"></ComboBox>
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center" >
                <Button HorizontalAlignment="Center"  Click="EditChecking">Сохранить</Button>
                <Button HorizontalAlignment="Center"  Click="Cancel">Отменить</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
